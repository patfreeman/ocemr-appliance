@app.route( '/applyconfig' )
def applyconfig():
    sleep(1)
    def inner():
        cmd = [ "sudo", "/usr/bin/ansible-playbook", "-M", "/usr/share/ocemr-appliance/ansible", "/usr/share/ocemr-appliance/ansible/ocemr.yml" ]
        proc = subprocess.Popen(
                cmd,
                stdout=subprocess.PIPE,
                stderr=subprocess.PIPE
                )
        try:
            awaiting = [proc.stdout, proc.stderr]
            while awaiting:
                ready, _, _ = select(awaiting, [], [])
                for pipe in ready:
                    line = pipe.readline()
                    if line:
                        yield line.rstrip() + '<br/>\n'
                    else:
                        awaiting.remove(pipe)
            if proc.poll() is None:
                proc.terminate()

        except GeneratorExit:
            proc.terminate()

    return Response(inner(), mimetype='text/html')

if __name__ == "__main__":
    app.debug = True
    app.secret_key = os.urandom(24)
    app.run(host='0.0.0.0')

